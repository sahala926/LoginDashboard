@model WebApplication3.Models.RegisterModel;
@{
    Layout = null;
}

<head>

    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> *@


    @* <link rel="stylesheet" href="~/css/site.css" /> *@

    <link rel="stylesheet" href="/css/register.css" />

</head>

<body>
    <div class="container">
        <div class="wrapper">
            <h1>CREATE ACCOUNT</h1>
            <form asp-action="Register" id="form_submit" method="post">
                <div class="input-box">
                    @* <label>Username</label> *@
                    <input asp-for="username" placeholder="Your Name" id="username" required autocomplete="off" autofocus />

                </div>
                <div class="input-box">
                    @* <label>Password</label> *@
                    <input asp-for="email" type="email" id="email" placeholder="Your Email" required />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="input-box">
                    @* <label>Password</label> *@
                    <input asp-for="password" type="password" id="password" placeholder="Password" required />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="input-box">
                    @* <label>Password</label> *@
                    <input asp-for="confirmpassword" type="password" id="confirmpassword" placeholder="Repeat Your Password" required />
                    <span asp-validation-for="confirmpassword" class="text-danger"></span>
                </div>
                <div class="forget">
                    <label for="demo">
                        <input type="checkbox" id="demo" />
                        Remember me
                    </label>
                    <a href="#">Forgot password?</a>
                </div>

                @* <div class="forgot">
                <label for="me"><input type="checkbox" id="me" required>Remember me</label>
                <a href="#" style="text-decoration: none;">forgot password?</a>
            </div> *@

                <button type="submit">SIGN UP</button>
                <div class="register">
                    Have already an account ? <a href="/Login/Login" style="text-decoration:none;">Login here</a>
                </div>
            </form>

            <div id="errormessage"></div>
        </div>

    </div>
    <script src="~/js/register.js"></script>
</body>


